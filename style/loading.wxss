.loading {
  position: fixed;
  width: 200rpx;
  height: 200rpx;
  top: calc(50vh - 100rpx);
  left: calc(50vw - 100rpx);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.loading::before {
  content: '';
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgb(245, 245, 245);
  z-index: 1;
}

.loading image {
  opacity: 1;
  width: 100%;
  z-index: 2;
}