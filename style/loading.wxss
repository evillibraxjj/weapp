.loading {
  position: fixed;
  width: 100rpx;
  height: 80rpx;
  top: calc(50vh - 40rpx);
  left: calc(50vw - 50rpx);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.loading::before {
  content: '';
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgb(245, 245, 245);
  z-index: 1;
}

@keyframes load {

  0%,
  100% {
    height: 50%;
    background: rgb(144, 238, 144);
  }

  50% {
    height: 100%;
    background: rgb(181, 216, 181);
  }
}


.loading view {
  width: 16rpx;
  border-radius: 8rpx;
  animation: load 1s ease infinite;
  z-index: 2;
}

.loading view:nth-child(2) {
  animation-delay: 0.2s;
}

.loading view:nth-child(3) {
  animation-delay: 0.4s;
}

.loading view:nth-child(4) {
  animation-delay: 0.6s;
}

.loading view:nth-child(5) {
  animation-delay: 0.8s;
}
