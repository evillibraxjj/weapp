.sticky-top {
  background: white;
  box-shadow: 0px 4px 8px 0px rgba(226, 226, 226, 0.5);
  z-index: 2;
}

.park-info {
  padding: 28rpx 36rpx 0;
  height: 108rpx;
  box-shadow: 0px 4rpx 8rpx 0px rgba(226, 226, 226, 0.5);
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  z-index: 2;
}

.park-info>view {
  height: 64rpx;
  line-height: 64rpx;
}

.park-info .stars::before {
  content: '★';
  line-height: 100%;
  font-size: 35rpx;
  margin-right: 10rpx;
  color: var(--red);
}

.park-info .arrow::after {
  content: '›';
  position: absolute;
  top: 20rpx;
  font-size: 60rpx;
  font-weight: 300;
  margin-left: 10rpx;
  color: #999999;
}

.park-info .switch {
  width: 244rpx;
  padding: 4rpx;
  background: #F0F0F0;
  border-radius: 32rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.park-info .switch text:nth-child(1) {
  width: 116rpx;
  background: #F63D3D;
  border-radius: 32rpx;
  font-weight: bold;
  color: white;
}
