.swiper-banner,
.swiper-banner image {
  width: 100vw;
  height: 618rpx;
}

.swiper-indicator {
  position: absolute;
  left: 36rpx;
  bottom: 68rpx;
  display: flex;
}

.swiper-indicator view {
  width: 16rpx;
  height: 16rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  background: white;
}

.swiper-indicator view.true {
  width: 20rpx;
  height: 20rpx;
  background: #FF3B3B;
}

.page-grid {
  position: relative;
  top: -38rpx;
  margin: 0 36rpx;
  display: grid;
  grid-template-columns: 1fr;
  grid-row-gap: 30rpx;
}

.service-gird {
  height: 364rpx;
  background: white;
  box-shadow: 0 4rpx 18rpx 0 rgba(224, 224, 224, 0.5);
  border-radius: 20rpx;
  padding: 60rpx;
  align-items: flex-start;
}

.service-gird .line {
  width: 2rpx;
  background: #f3f3f3;
}

.swiper-butler {
  padding: 22rpx 0 16rpx 0;
  position: relative;
  height: 133rpx;
  background: url('https://lookprd-oss.oss-cn-shenzhen.aliyuncs.com/fitres/image/2020.png');
  background-size: 100%;
}

.swiper-butler navigator {
  padding: 0 168rpx 0 196rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: white;
  line-height: 36rpx;
}

.swiper-butler .tip {
  height: 60rpx;
  margin-top: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
  color: #bcbfcb;
  line-height: 28rpx;
}

.user-name {
  position: fixed;
  left: 36rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: white;
  line-height: 40rpx;
}

.link-color {
  color: #6fc2ff;
}
