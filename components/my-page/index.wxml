<block wx:if="{{ storeAppLoad }}">
  <view class="page">
    <slot />
  </view>
  <view wx:if="{{ !storeToken }}" class="login {{ loginShowModel }}" catch:tap="bindChenaLogin" catch:touchmove>
    <view class="flex flex-column justify-end" catch:tap>
      <button loading="{{loginLoading}}" hover-class="button-hover" open-type="getUserInfo" bind:getuserinfo="bindLogin">
        <text>登录</text>
      </button>
    </view>
  </view>
</block>
