.page {
  width: 100vw;
  height: 100vh;
  background: white;
}

.login {
  position: fixed;
  top: 25vh;
  left: 10vw;
  right: 10vw;
  background: white;
  border-radius: 30rpx;
  z-index: 2;
  display: flex;
  justify-content: center;
  opacity: 0;
}


.login::after {
  content: '';
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: black;
  z-index: -1;
  opacity: 0;
}

.login.true {
  opacity: 1;
}

.login.true::after {
  opacity: 0.1;
}
